<resources>
    <!-- Base application theme. -->
    <style name="Theme.FacebookAdsConfiguration" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.FacebookAdsConfiguration.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FullScreen" parent="Theme.FacebookAdsConfiguration.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>


    <!--    Ads Theme Style-->

    <style name="Theme.FacebookAdsConfiguration.NoActionBar.AdTheme">
        <item name="android:background">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="AdsButtonShapeAppearance">
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeTopRight">32dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
        <item name="cornerSizeBottomRight">32dp</item>
    </style>

    <style name="AdsButtonShapeMediumAppearance">
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
    </style>

    <style name="AdsButtonStyleMedium" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/purple_700</item>
        <item name="rippleColor">@color/purple_500</item>
        <item name="shapeAppearance">@style/AdsButtonShapeMediumAppearance</item>
    </style>
    <style name="AdsButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/purple_700</item>
        <item name="rippleColor">@color/purple_500</item>
        <item name="shapeAppearance">@style/AdsButtonShapeAppearance</item>
    </style>

</resources>